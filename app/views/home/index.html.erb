<%= form_tag("/signup", :method => "post") do %>

	<p><%= label_tag(:email, "Email:") %>
  	<%= text_field(:users, :email) %></p>

  	<p><%= label_tag(:name, "Name:") %>
  	<%= text_field(:users, :name) %></p>

 	<p><%= label_tag(:password, "Password:") %>
  	<%= password_field(:users, :password) %></p>

	<p><%= submit_tag("Signup") %></p>

<% end %>
